.edit-line-component {
  &.blocked {
    opacity: 0.5;
    filter: grayscale(100%);
    pointer-events: none;
  }
}

.title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  @media screen and (max-width: 480px) {
    font-size: 16px;
  }
}

.input {
  width: 60%;
}

.buttons {
  display: flex;
}

.button-icon {
  margin-right: 20px;

  &:last-child {
    margin-right: 0;
  }
}